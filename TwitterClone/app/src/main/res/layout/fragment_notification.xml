<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/no_content_padding">

        <TextView
            android:id="@+id/no_notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/no_notification"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/no_notification_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/tweet_profile_image_margin"
            android:text="@string/no_notification_info"
            android:textAlignment="center"
            android:textSize="@dimen/no_notification_info_text_size" />
    </LinearLayout>

</RelativeLayout>